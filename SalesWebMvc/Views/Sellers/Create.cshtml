@{
}
<h2>Create</h2>

<hr/> <!--Linha horizontal em HTML-->
<div class="row"> <!-- div representa um agrupamento de elementos e row serve para agrupar colunas horizontalmente, garante que as colunas fiquem lado a lado -->
    <div class="col-md-4"> <!--Os componentes dentro do objeto col-md-4 ganham um tamanho de 4/12 na sua extensão-->
        <form asp-action="Create">
            <div class="form-group"> 
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" /> <!--asp-for passa o valor digitado pelo usuário para o campo Name do Seller-->
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="BirthDate" class="control-label"></label>
                <input asp-for="BirthDate" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="BaseSalary" class="control-label"></label>
                <input asp-for="BaseSalary" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
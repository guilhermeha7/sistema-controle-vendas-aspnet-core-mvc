@model SalesWebMvc.Models.Seller

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<h5>Are you sure you want to delete this seller?</h5>

<hr />

<dl class="row mb-2">
    <!-- dl: é uma estrutura semântica usada para mostrar pares de informação (termo + descrição)-->
    <dt class="col-sm-2">
        <!--dt representa o termo-->
        @Html.DisplayNameFor(Model => Model.Name)
    </dt>
    <dd class="col-sm-10">
        <!--dd representa a definição-->
        @Html.DisplayFor(Model => Model.Name)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(Model => Model.Email)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(Model => Model.Email)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(Model => Model.BirthDate)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(Model => Model.BirthDate)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(Model => Model.BaseSalary)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(Model => Model.BaseSalary)
    </dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index">Back to List</a>
</form>
